@model Projekt.Models.Bokning
@{
    ViewData["Title"] = "Boka";
}

<!doctype html>
<html lang="en">

<head>
    <title>

    </title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <style>
        body {
            font-family: sans-serif;
            background: url(../bilder/LOGGA\ IN\ BILD.jpg) no-repeat;
            background-size: cover;
        }

        .boka-tvätt {
            width: 400px;
            height: 500px;
            margin: auto;
           background-color:white;
        }

         .boka-tvätt h1 {
          text-align: center;
          font-size: 40px;
          border-bottom: 10px solid #f74949;
          margin-bottom: 30px;
          padding: 13px 0;
            }

        .tid-datum {
            width: 100%;
            overflow: hidden;
            font-size: 15px;
            padding: 6px 0;
            margin: 6px 0;
        }

        #knapp {
            margin-left: 150px;
            width: 80px;
            margin-bottom: 20px;
        }

        #email {
            margin-left: 10px;
            overflow: hidden;
            font-size: 20px;
            margin-left:20px;
        }

        #Telefon {
            margin: 8px 0;
            overflow: hidden;
            font-size: 20px;
        }

        #namn {
            overflow: hidden;
            font-size: 10px;
            margin-left: 12px;
        }

        .input-group-prepend {
            margin: 3px 0;
        }
    </style>
    

   
    
    
    
    @using (Html.BeginForm())
    {

    <form>
        <div class="boka-tvätt">
            <h1>Boka</h1>
            <div class="olika-tvättprogram">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        Tvättprogram: @Html.EditorFor(Bokning => Bokning.Tvättprogram) 
                  </div>
                </div>
                <div class="tid-datum">
                    <p>Tid:    @Html.EditorFor(Bokning => Bokning.Tid) </p>
                    <p>Datum:  @Html.EditorFor(Bokning => Bokning.Datum)</p>
                </div>
                <div class="kontaktinfo">
                    <p> Namn:   @Html.EditorFor(Bokning => Bokning.Namn) </p>
                    <p>E-mail:  @Html.EditorFor(Bokning => Bokning.Email) </p>
                    <p>Telefon: @Html.EditorFor(Bokning => Bokning.Telefon) </p>
                </div>
                <input type="submit" value="Boka" >
            </div>
    </form>

    }









    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
</body>

</html>
